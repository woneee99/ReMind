<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.enjoytrip.dao.UserRefreshTokenDao">

    <select id="findUserRefreshToken"
            parameterType="String" resultType="com.example.enjoytrip.oauth.token.UserRefreshToken">
        select *
        from user_refresh_token
        where userId = #{userId}
    </select>

    <select id="findUserRefreshToken2"
            parameterType="String" resultType="com.example.enjoytrip.oauth.token.UserRefreshToken">
        select *
        from user_refresh_token
        where userId = #{userId} and refreshToken = #{refreshToken}
    </select>

    <insert id="register"
            parameterType="com.example.enjoytrip.oauth.token.UserRefreshToken">
        insert into user_refresh_token ( userId, refreshToken )
        values ( #{userId}, #{refreshToken} )
    </insert>
</mapper>